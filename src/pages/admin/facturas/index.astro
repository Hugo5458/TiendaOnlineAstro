---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { supabase } from '../../../lib/supabase';
import { formatPrice } from '../../../lib/utils';

export const prerender = false;

// Check authentication
const accessToken = Astro.cookies.get('sb-access-token')?.value;
if (!accessToken) {
  return Astro.redirect('/login?redirect=/admin/facturas');
}

const { data: { user } } = await supabase.auth.getUser(accessToken);
const ADMIN_EMAILS = ['hugodelmoral77@gmail.com', 'admin@fashionstore.com'];
const isAdmin = !!user?.email && ADMIN_EMAILS.includes(user.email);

if (!isAdmin) {
  return Astro.redirect('/cuenta');
}

// Get filter from URL params
const url = new URL(Astro.request.url);
const typeFilter = url.searchParams.get('tipo') || 'all';

// Fetch invoices with order info
let query = supabase
  .from('invoices')
  .select('*, invoice_items(*)')
  .order('created_at', { ascending: false });

if (typeFilter === 'invoice') {
  query = query.eq('type', 'invoice');
} else if (typeFilter === 'credit_note') {
  query = query.eq('type', 'credit_note');
}

const { data: invoices, error } = await query;

// Calculate totals
const allInvoices = invoices || [];
const totalFacturas = allInvoices.filter(i => i.type === 'invoice');
const totalAbonos = allInvoices.filter(i => i.type === 'credit_note');

const sumFacturas = totalFacturas.reduce((s, i) => s + (i.total || 0), 0);
const sumAbonos = totalAbonos.reduce((s, i) => s + (i.total || 0), 0); // already negative 
const balance = sumFacturas + sumAbonos; // net revenue

function formatInvoiceDate(dateStr: string) {
  return new Date(dateStr).toLocaleDateString('es-ES', {
    day: '2-digit',
    month: '2-digit',
    year: 'numeric',
    hour: '2-digit',
    minute: '2-digit',
  });
}

function getStatusLabel(status: string) {
  const labels: Record<string, { text: string; class: string }> = {
    draft: { text: 'Borrador', class: 'bg-gray-100 text-gray-700' },
    issued: { text: 'Emitida', class: 'bg-blue-100 text-blue-700' },
    paid: { text: 'Pagada', class: 'bg-emerald-100 text-emerald-700' },
    voided: { text: 'Anulada', class: 'bg-red-100 text-red-700' },
  };
  return labels[status] || { text: status, class: 'bg-gray-100 text-gray-700' };
}
---

<AdminLayout title="Facturas">
  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <!-- Total Invoices -->
    <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
      <div class="flex items-center gap-4">
        <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-emerald-500 to-teal-600 flex items-center justify-center shadow-lg shadow-emerald-500/30">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
