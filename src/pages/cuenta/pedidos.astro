<script>
  // Cancel Order Modal Logic
  const cancelModal = document.getElementById('cancel-modal');
  const cancelBackdrop = document.getElementById('cancel-backdrop');
  const cancelModalClose = document.getElementById('cancel-modal-close');
  const cancelModalConfirm = document.getElementById('cancel-modal-confirm');
  const cancelOrderNumber = document.getElementById('cancel-order-number');
  const cancelModalError = document.getElementById('cancel-modal-error');
  
  let currentCancelOrderId: string | null = null;
  
  // Open cancel modal
  document.querySelectorAll('.cancel-order-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const target = e.currentTarget as HTMLElement;
      currentCancelOrderId = target.dataset.orderId || null;
      const orderNum = target.dataset.orderNumber || '';
      
      if (cancelOrderNumber) cancelOrderNumber.textContent = orderNum;
      cancelModal?.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    });
  });
  
  // Close cancel modal
  function closeCancelModal() {
    cancelModal?.classList.add('hidden');
    document.body.style.overflow = '';
    currentCancelOrderId = null;
    cancelModalError?.classList.add('hidden');
  }
  
  cancelModalClose?.addEventListener('click', closeCancelModal);
  cancelBackdrop?.addEventListener('click', closeCancelModal);
  
  // Confirm cancellation
  cancelModalConfirm?.addEventListener('click', async () => {
    if (!currentCancelOrderId) return;
    
    const btn = cancelModalConfirm as HTMLButtonElement;
    btn.disabled = true;
    btn.textContent = 'Cancelando...';
    cancelModalError?.classList.add('hidden');
    
    try {
      const response = await fetch('/api/orders/cancel', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ orderId: currentCancelOrderId })
      });
      
      const data = await response.json();
      
      if (data.success) {
        // Reload page to show updated status
        window.location.reload();
      } else {
        throw new Error(data.error || 'Error al cancelar');
      }
    } catch (error: any) {
      cancelModalError!.textContent = error.message;
      cancelModalError?.classList.remove('hidden');
      btn.disabled = false;
      btn.textContent = 'S√≠, cancelar';
    }
  });
  
  // Return Order Modal Logic
  const returnModal = document.getElementById('return-modal');
  const returnBackdrop = document.getElementById('return-backdrop');
  const returnModalClose = document.getElementById('return-modal-close');
  const returnModalConfirm = document.getElementById('return-modal-confirm');
  const returnOrderNumber = document.getElementById('return-order-number');
  const returnReason = document.getElementById('return-reason') as HTMLTextAreaElement;
  const returnModalError = document.getElementById('return-modal-error');
  const returnModalSuccess = document.getElementById('return-modal-success');
  
  let currentReturnOrderId: string | null = null;
  
  // Open return modal
  document.querySelectorAll('.return-order-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const target = e.currentTarget as HTMLElement;
      currentReturnOrderId = target.dataset.orderId || null;
      const orderNum = target.dataset.orderNumber || '';
      
      if (returnOrderNumber) returnOrderNumber.textContent = orderNum;
      returnModal?.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    });
  });
  
  // Close return modal
  function closeReturnModal() {
    returnModal?.classList.add('hidden');
    document.body.style.overflow = '';
    currentReturnOrderId = null;
    returnModalError?.classList.add('hidden');
    returnModalSuccess?.classList.add('hidden');
    if (returnReason) returnReason.value = '';
  }
  
  returnModalClose?.addEventListener('click', closeReturnModal);
  returnBackdrop?.addEventListener('click', closeReturnModal);
  
  // Confirm return request
  returnModalConfirm?.addEventListener('click', async () => {
    if (!currentReturnOrderId) return;
    
    const btn = returnModalConfirm as HTMLButtonElement;
    btn.disabled = true;
    btn.textContent = 'Procesando...';
    returnModalError?.classList.add('hidden');
    
    try {
      const response = await fetch('/api/orders/return-request', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ 
          orderId: currentReturnOrderId,
          reason: returnReason?.value || ''
        })
      });
      
      const data = await response.json();
      
      if (data.success) {
        returnModalSuccess!.textContent = '‚úÖ Solicitud de devoluci√≥n registrada correctamente';
        returnModalSuccess?.classList.remove('hidden');
        btn.textContent = 'Solicitud enviada';
        
        // Close modal after 2 seconds
        setTimeout(() => {
          window.location.reload();
        }, 2000);
      } else {
        throw new Error(data.error || 'Error al procesar');
      }
    } catch (error: any) {
      returnModalError!.textContent = error.message;
      returnModalError?.classList.remove('hidden');
      btn.disabled = false;
      btn.textContent = 'Confirmar Solicitud';
    }
  });
  
  // Escape key to close modals
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      if (!cancelModal?.classList.contains('hidden')) closeCancelModal();
      if (!returnModal?.classList.contains('hidden')) closeReturnModal();
    }
  });
</script>
