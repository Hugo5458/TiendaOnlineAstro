        <!-- Section Header -->
        <div class="text-center mb-12">
          <span class="inline-flex items-center gap-2 text-xs uppercase tracking-widest text-red-500 mb-3">
            <svg class="w-4 h-4 animate-pulse" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
            </svg>
            Tiempo limitado
            <svg class="w-4 h-4 animate-pulse" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
            </svg>
          </span>
          <h2 class="text-2xl md:text-4xl uppercase tracking-widest font-light mb-3 text-red-600">Ofertas Flash</h2>
          <p class="text-gray-600 text-sm max-w-xl mx-auto">Aprovecha estos descuentos exclusivos antes de que se agoten. ¡No te los pierdas!</p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 lg:gap-8">
          {flashOfferProducts.map((product) => (
            <ProductCard product={product} />
          ))}
        </div>
        
        <div class="text-center mt-10">
          <a href="/productos?ofertas=true" class="inline-block px-10 py-4 bg-red-600 text-white text-xs uppercase tracking-widest hover:bg-red-700 transition-all duration-300">
            Ver todas las ofertas
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- SECTION 7: Trust Badges / Beneficios -->
  <section class="py-16 lg:py-20 bg-gray-900 text-white">
    <div class="max-w-screen-2xl mx-auto px-4 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <h2 class="text-xl md:text-2xl uppercase tracking-widest font-light mb-3">¿Por qué elegirnos?</h2>
        <p class="text-gray-400 text-sm">Comprometidos con tu satisfacción en cada compra</p>
      </div>
      
