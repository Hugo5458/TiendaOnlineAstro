          <p class="text-xs text-gray-400">Siempre disponibles para ti</p>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 8: Newsletter -->
  <section id="newsletter" class="py-20 lg:py-28 bg-white scroll-mt-32">
    <div class="max-w-2xl mx-auto px-4 text-center">
      <div class="mb-6">
        <div class="w-16 h-16 rounded-full bg-gray-100 flex items-center justify-center mx-auto mb-6">
