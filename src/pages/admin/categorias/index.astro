---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import Button from '../../../components/ui/Button.astro';
import { getCategories } from '../../../lib/supabase';
import { truncate } from '../../../lib/utils';

export const prerender = false; // SSR

const categories = await getCategories();

// URL params
const url = Astro.url;
const searchQuery = url.searchParams.get('buscar')?.toLowerCase();

let filteredCategories = categories;

if (searchQuery) {
  filteredCategories = filteredCategories.filter(c =>
    c.name.toLowerCase().includes(searchQuery) ||
    c.slug.toLowerCase().includes(searchQuery)
  );
}
---

<AdminLayout title="Gestión de Categorías">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
    <div>
      <h2 class="text-lg text-charcoal-600">
        {filteredCategories.length} categorías encontradas
      </h2>
    </div>
    <Button href="/admin/categorias/nuevo" variant="primary">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
      Nueva Categoría
    </Button>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-charcoal-100 p-4 mb-6">
    <form class="flex flex-col md:flex-row gap-4">
      <div class="flex-1">
        <input
          type="text"
          name="buscar"
          value={searchQuery || ''}
          placeholder="Buscar categorías..."
          class="w-full px-4 py-2 rounded-lg border border-charcoal-200 focus:border-navy-500 focus:ring-2 focus:ring-navy-500/20 outline-none"
        />
      </div>
      <Button type="submit" variant="outline">
        Buscar
      </Button>
    </form>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-charcoal-100 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-charcoal-50 border-b border-charcoal-100">
          <tr>
            <th class="text-left px-6 py-4 text-sm font-semibold text-charcoal-700">Nombre</th>
            <th class="text-left px-6 py-4 text-sm font-semibold text-charcoal-700">Slug</th>
            <th class="text-left px-6 py-4 text-sm font-semibold text-charcoal-700">Descripción</th>
            <th class="text-right px-6 py-4 text-sm font-semibold text-charcoal-700">Acciones</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-charcoal-100">
          {filteredCategories.length > 0 ? (
            filteredCategories.map((category) => (
              <tr class="hover:bg-charcoal-50 transition-colors">
                <td class="px-6 py-4">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 bg-cream-100 rounded-lg overflow-hidden flex-shrink-0 flex items-center justify-center text-charcoal-300">
                      {category.image_url ? (
                        <img src={category.image_url} alt={category.name} class="w-full h-full object-cover" />
                      ) : (
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                        </svg>
                      )}
                    </div>
                    <span class="font-medium text-navy-900">{category.name}</span>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <span class="text-sm text-charcoal-600 font-mono">{category.slug}</span>
                </td>
                <td class="px-6 py-4">
                  <span class="text-charcoal-600">
                    {category.description ? truncate(category.description, 80) : '-'}
                  </span>
                </td>
                <td class="px-6 py-4 text-right">
                  <div class="flex items-center justify-end gap-2">
                    <a
                      href={`/admin/categorias/${category.id}`}
                      class="p-2 text-charcoal-500 hover:text-navy-600 transition-colors"
                      title="Editar"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    </a>
                    <button
                      class="delete-category-btn p-2 text-charcoal-500 hover:text-red-600 transition-colors"
                      data-category-id={category.id}
                      data-category-name={category.name}
                      title="Eliminar"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    </button>
                  </div>
                </td>
              </tr>
            ))
          ) : (
            <tr>
              <td colspan="4" class="px-6 py-12 text-center text-charcoal-500">
                No se encontraron categorías
              </td>
            </tr>
          )}
        </tbody>
      </table>
    </div>
  </div>
</AdminLayout>

<script>
  document.querySelectorAll('.delete-category-btn').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      const id = e.currentTarget.dataset.categoryId;
      const name = e.currentTarget.dataset.categoryName;

      if (!id) return;

      if (confirm(`¿Estás seguro de que quieres eliminar "${name}"?`)) {
        try {
          const response = await fetch(`/api/categories/${id}`, {
            method: 'DELETE',
          });

          if (response.ok) {
            window.location.reload();
          } else {
            const data = await response.json().catch(() => null);
            alert('Error al eliminar la categoría' + (data?.error ? `: ${data.error}` : ''));
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Error al eliminar la categoría');
        }
      }
    });
  });
</script>
