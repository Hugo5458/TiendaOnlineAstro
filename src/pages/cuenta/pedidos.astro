---
import PublicLayout from '../../layouts/PublicLayout.astro';
import Button from '../../components/ui/Button.astro';
import { supabase, isSupabaseConfigured, createServerClient } from '../../lib/supabase';

export const prerender = false;

const authToken = Astro.cookies.get('sb-access-token')?.value;
if (!authToken && isSupabaseConfigured()) {
  return Astro.redirect('/login?redirect=/cuenta/pedidos');
}

// Get user's orders
let orders: any[] = [];
let userEmail = '';

if (isSupabaseConfigured() && authToken) {
  const { data: { user } } = await supabase.auth.getUser(authToken);
  userEmail = user?.email || '';
  
  if (userEmail) {
    const serverClient = createServerClient();
    const { data, error } = await serverClient
      .from('orders')
      .select('*, order_items(*)')
      .eq('customer_email', userEmail)
      .order('created_at', { ascending: false });
    
    if (!error && data) {
      orders = data;
    }
  }
} else {
  // Demo orders
  orders = [
    {
      id: 'demo-order-1',
      order_number: 'ORD-2026-001',
      customer_email: 'demo@example.com',
      status: 'delivered',
      total: 15900,
      created_at: new Date(Date.now() - 7 * 24 * 60 * 60 * 1000).toISOString(),
      order_items: [
        { product_name: 'Camisa Oxford Azul', quantity: 1, unit_price: 5900 },
        { product_name: 'Pantal√≥n Chino', quantity: 1, unit_price: 6900 }
      ]
    },
    {
      id: 'demo-order-2',
      order_number: 'ORD-2026-002',
      customer_email: 'demo@example.com',
      status: 'paid',
      total: 8900,
      created_at: new Date(Date.now() - 2 * 24 * 60 * 60 * 1000).toISOString(),
      order_items: [
        { product_name: 'Vestido Midi Floral', quantity: 1, unit_price: 8900 }
      ]
    },
    {
      id: 'demo-order-3',
      order_number: 'ORD-2026-003',
      customer_email: 'demo@example.com',
      status: 'shipped',
      total: 29900,
      created_at: new Date(Date.now() - 1 * 24 * 60 * 60 * 1000).toISOString(),
      order_items: [
        { product_name: 'Traje Azul Marino', quantity: 1, unit_price: 29900 }
      ]
    }
  ];
}

// Status configuration
const statusConfig: Record<string, { label: string; color: string; icon: string; bgColor: string }> = {
  pending: { 
    label: 'Pendiente', 
    color: 'text-amber-700', 
    bgColor: 'bg-amber-50 border-amber-200',
    icon: '‚è≥' 
  },
  paid: { 
    label: 'Pagado', 
    color: 'text-blue-700', 
    bgColor: 'bg-blue-50 border-blue-200',
    icon: 'üí≥' 
  },
  processing: { 
    label: 'Procesando', 
    color: 'text-indigo-700', 
    bgColor: 'bg-indigo-50 border-indigo-200',
    icon: 'üìã' 
  },
  shipped: { 
    label: 'Enviado', 
    color: 'text-purple-700', 
    bgColor: 'bg-purple-50 border-purple-200',
    icon: 'üöö' 
  },
  delivered: { 
    label: 'Entregado', 
    color: 'text-success-700', 
    bgColor: 'bg-success-50 border-success-200',
    icon: '‚úÖ' 
  },
  cancelled: { 
    label: 'Cancelado', 
    color: 'text-danger-700', 
    bgColor: 'bg-danger-50 border-danger-200',
    icon: '‚ùå' 
  },
  refunded: { 
    label: 'Reembolsado', 
    color: 'text-gray-700', 
    bgColor: 'bg-gray-50 border-gray-200',
    icon: '‚Ü©Ô∏è' 
  }
};

function getStatusConfig(status: string) {
  return statusConfig[status] || statusConfig.pending;
}

function canCancel(status: string): boolean {
  return ['pending', 'paid'].includes(status);
}

function canRequestReturn(status: string): boolean {
  return status === 'delivered';
}
