---
import PublicLayout from '../../../layouts/PublicLayout.astro';
import Button from '../../../components/ui/Button.astro';
import { supabase, isSupabaseConfigured, createServerClient } from '../../../lib/supabase';

export const prerender = false;

const { id } = Astro.params;

const authToken = Astro.cookies.get('sb-access-token')?.value;
if (!authToken && isSupabaseConfigured()) {
  return Astro.redirect('/login?redirect=/cuenta/pedidos');
}

// Get order details
let order: any = null;
let userEmail = '';

if (isSupabaseConfigured() && authToken) {
  const { data: { user } } = await supabase.auth.getUser(authToken);
  userEmail = user?.email || '';
  
  if (userEmail && id) {
    const serverClient = createServerClient();
    const { data, error } = await serverClient
      .from('orders')
      .select('*, order_items(*)')
      .eq('id', id)
      .eq('customer_email', userEmail)
      .single();
    
    if (!error && data) {
      order = data;
    }
  }
} else {
  // Demo order
  order = {
    id: 'demo-order-1',
    order_number: 'ORD-2026-001',
    customer_email: 'demo@example.com',
    customer_name: 'Usuario Demo',
    status: 'delivered',
    total: 15900,
    subtotal: 12800,
    tax: 2687,
    shipping: 413,
    created_at: new Date(Date.now() - 7 * 24 * 60 * 60 * 1000).toISOString(),
    shipping_address: {
      line1: 'Calle Ejemplo 123',
      city: 'Madrid',
      postal_code: '28001',
      country: 'Espa√±a'
    },
    order_items: [
      { product_name: 'Camisa Oxford Azul', quantity: 1, unit_price: 5900 },
      { product_name: 'Pantal√≥n Chino', quantity: 1, unit_price: 6900 }
    ]
  };
}

// If order not found
if (!order) {
  return Astro.redirect('/cuenta/pedidos');
}

// Status configuration
const statusConfig: Record<string, { label: string; color: string; icon: string; bgColor: string; description: string }> = {
  pending: { 
    label: 'Pendiente', 
    color: 'text-amber-700', 
    bgColor: 'bg-amber-50 border-amber-200',
    icon: '',
    description: 'Tu pedido est√° pendiente de pago'
  },
  paid: { 
    label: 'Pagado', 
    color: 'text-blue-700', 
    bgColor: 'bg-blue-50 border-blue-200',
    icon: '',
    description: 'Pago recibido. Preparando tu pedido...'
  },
  processing: { 
    label: 'Procesando', 
    color: 'text-indigo-700', 
    bgColor: 'bg-indigo-50 border-indigo-200',
    icon: '',
    description: 'Tu pedido est√° siendo preparado'
  },
  shipped: { 
    label: 'Enviado', 
    color: 'text-purple-700', 
    bgColor: 'bg-purple-50 border-purple-200',
    icon: '',
    description: 'Tu pedido est√° en camino'
  },
  delivered: { 
    label: 'Entregado', 
    color: 'text-success-700', 
    bgColor: 'bg-success-50 border-success-200',
    icon: '',
    description: '¬°Pedido entregado correctamente!'
  },
  cancelled: { 
    label: 'Cancelado', 
    color: 'text-danger-700', 
    bgColor: 'bg-danger-50 border-danger-200',
    icon: '',
    description: 'Este pedido ha sido cancelado'
  },
  return_pending: { 
    label: 'Devoluci√≥n en Proceso', 
    color: 'text-orange-700', 
    bgColor: 'bg-orange-50 border-orange-200',
    icon: '',
    description: 'Esperando recibir el paquete de devoluci√≥n'
  },
  refunded: { 
    label: 'Reembolsado', 
    color: 'text-gray-700', 
    bgColor: 'bg-gray-50 border-gray-200',
    icon: '',
    description: 'Reembolso procesado correctamente'
  }
};

const status = statusConfig[order.status] || statusConfig.pending;
const canCancel = ['pending', 'paid'].includes(order.status);
const canRequestReturn = order.status === 'delivered';

function formatDate(dateStr: string) {
  return new Date(dateStr).toLocaleDateString('es-ES', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
}

function formatPrice(cents: number) {
  return (cents / 100).toFixed(2);
}
