---
import BaseLayout from './BaseLayout.astro';
import CartIcon from '../components/islands/CartIcon';
import NewsletterPopup from '../components/ui/NewsletterPopup.astro';
import CartDrawer from '../components/islands/CartDrawer';
import { getCategories } from '../lib/supabase';

import SearchBar from '../components/ui/SearchBar.tsx';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;

const accessToken = Astro.cookies.get('sb-access-token')?.value;
const isLoggedIn = !!accessToken;

// Separar categorías principales de subcategorías
// Identificar categorías raíz (Hombre/Mujer)
const cleanName = (name: string) => name.replace(/[\p{Emoji_Presentation}\p{Extended_Pictographic}]/gu, '').trim();

const categoriesRaw = await getCategories();
const categories = categoriesRaw.map(c => ({
  ...c,
  name: cleanName(c.name)
}));

const hombreCat = categories.find(c => c.slug === 'hombre');
const mujerCat = categories.find(c => c.slug === 'mujer');

const mainCategories = categories.filter(c => c.slug === 'hombre' || c.slug === 'mujer');

// Lógica híbrida: Si tienen parent_id, úsalo. Si no, usa slugs hardcodeados (fallback)
const getSubcats = (parentId: string | undefined, hardcodedSlugs: string[]) => {
  const byParent = parentId ? categories.filter(c => c.parent_id === parentId) : [];
  if (byParent.length > 0) return byParent;
  return categories.filter(c => hardcodedSlugs.includes(c.slug));
};

const hombreSubcats = getSubcats(hombreCat?.id, ['camisas', 'pantalones', 'camisetas', 'chalecos', 'trajes', 'accesorios', 'camisas-hombre', 'pantalones-hombre', 'calzado-hombre']);
const mujerSubcats = getSubcats(mujerCat?.id, ['vestidos', 'blusas', 'faldas', 'calzado-mujer', 'accesorios', 'camisas', 'pantalones']);

const subCategories = categories.filter(c => c.slug !== 'hombre' && c.slug !== 'mujer').slice(0, 8);
