---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

import { SITE_URL } from '../lib/constants';

const { 
  title = 'FashionStore | Moda Premium',
  description = 'Descubre las Ãºltimas tendencias en moda premium. Ropa exclusiva de alta calidad para hombre y mujer.',
  image = '/og-image.jpg'
 } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || SITE_URL);
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#000000" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content="FashionStore" />
    <meta property="og:locale" content="es_ES" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white text-black font-sans antialiased">
    <slot />
    <script is:inline>
      // Safety redirect: If the page loads on localhost but we are in production
      if (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1') {
        const isDev = window.location.port === '4321'; // Simple check to allow local development
        if (!isDev) {
          window.location.replace('https://yoowww00g84ok88ww4os08o0.victoriafp.online' + window.location.pathname + window.location.search);
        }
      }
    </script>
  </body>
</html>

<style is:global>
  /* Pull & Bear Style - Minimal Scrollbar */
  ::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }
  
  ::-webkit-scrollbar-track {
    background: #FFFFFF;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #BDBDBD;
    border-radius: 3px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #9E9E9E;
  }

  /* Smooth scroll */
  html {
    scroll-behavior: smooth;
  }

  /* Selection - P&B Style */
  ::selection {
    background-color: #000000;
    color: #FFFFFF;
  }

  /* Reset link styles for minimal look */
  a {
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  a:hover {
    opacity: 0.7;
  }

  /* P&B Button Reset */
  button {
    cursor: pointer;
    font-family: inherit;
  }

  /* Minimal focus styles */
  *:focus {
    outline: none;
  }

  *:focus-visible {
    outline: 1px solid #000000;
    outline-offset: 2px;
  }

  /* Image optimization */
  img {
    max-width: 100%;
    height: auto;
  }

  /* Typography refinements */
  body {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
  }

  /* P&B typical letter spacing for headings */
  h1, h2, h3, h4, h5, h6 {
    letter-spacing: 0.02em;
    font-weight: 400;
  }

  /* Uppercase style for labels */
  .uppercase-label {
    text-transform: uppercase;
    font-size: 0.6875rem;
    letter-spacing: 0.1em;
    font-weight: 500;
  }
</style>
