            // Not logged in or mismatch: show guest menu, hide logged-in menu
            if (guestMenu) guestMenu.classList.remove('hidden');
            if (loggedInMenu) loggedInMenu.classList.add('hidden');
            
            // If server says no cookie but local has data, clear it to stay in sync
            if (!isLoggedIn && localStorageUser) {
              localStorage.removeItem('fashionstore-user');
            }
          }
        } catch (e) {
          console.error('Auth check error:', e);
        }
      })();
