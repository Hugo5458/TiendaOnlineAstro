---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import Button from '../../../components/ui/Button.astro';
import { supabase } from '../../../lib/supabase';
import { formatPrice } from '../../../lib/utils';

export const prerender = false; // SSR

const { id } = Astro.params;

const { data: order, error: orderError } = await supabase
  .from('orders')
  .select('*')
  .eq('id', id)
  .single();

if (orderError || !order) {
  return Astro.redirect('/admin/pedidos');
}

const { data: items } = await supabase
  .from('order_items')
  .select('*')
  .eq('order_id', id)
  .order('created_at', { ascending: true });

let error = '';
let successMsg = '';

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const status = (formData.get('status') as string) || order.status;
  const notes = (formData.get('notes') as string) || '';

  const { error: updateError } = await supabase
    .from('orders')
    .update({
      status,
      notes: notes.trim() || null,
    })
    .eq('id', id);

  if (updateError) {
    error = updateError.message;
  } else {
    return Astro.redirect(`/admin/pedidos/${id}`);
  }
}

const statusLabel = (status: string) => {
  switch (status) {
    case 'pending': return 'Pendiente';
    case 'paid': return 'Pagado';
    case 'processing': return 'Procesando';
    case 'shipped': return 'Enviado';
    case 'delivered': return 'Entregado';
    case 'cancelled': return 'Cancelado';
    case 'refunded': return 'Reembolsado';
    default: return status;
  }
};

const statusColor = (status: string) => {
  switch (status) {
    case 'pending': return 'bg-yellow-100 text-yellow-800';
    case 'paid': return 'bg-green-100 text-green-800';
    case 'processing': return 'bg-blue-100 text-blue-800';
    case 'shipped': return 'bg-indigo-100 text-indigo-800';
    case 'delivered': return 'bg-emerald-100 text-emerald-800';
    case 'cancelled': return 'bg-red-100 text-red-800';
    case 'refunded': return 'bg-purple-100 text-purple-800';
    default: return 'bg-gray-100 text-gray-800';
  }
};

// Parse shipping address
const shippingAddress = order.shipping_address ? (typeof order.shipping_address === 'string' ? JSON.parse(order.shipping_address) : order.shipping_address) : null;
---

<AdminLayout title="Detalle del Pedido">
  <div class="max-w-4xl">
    <a href="/admin/pedidos" class="inline-flex items-center text-charcoal-600 hover:text-navy-600 mb-6">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Volver a pedidos
    </a>

    {error && (
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6">
        {error}
      </div>
    )}

    <div id="cancel-success" class="hidden bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-6">
      Pedido cancelado correctamente. El stock ha sido restaurado.
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <div class="lg:col-span-2 space-y-6">
        <div class="bg-white rounded-xl shadow-sm border border-charcoal-100 p-6">
          <div class="flex items-start justify-between gap-4">
            <div>
              <h2 class="text-lg font-semibold text-navy-900">
                Pedido {order.order_number || order.id}
              </h2>
              <p class="text-sm text-charcoal-500 mt-1">
                {new Date(order.created_at).toLocaleString('es-ES')}
              </p>
            </div>
            <div class="text-right">
              <span class={`inline-block px-3 py-1 rounded-full text-xs font-semibold ${statusColor(order.status)}`}>
                {statusLabel(order.status)}
              </span>
              <p class="text-xl font-bold text-navy-900 mt-2">{formatPrice(order.total)}</p>
            </div>
          </div>

          <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <p class="text-sm text-charcoal-500">Cliente</p>
              <p class="font-medium text-navy-900">{order.customer_name}</p>
              <p class="text-sm text-charcoal-600">{order.customer_email}</p>
              {order.customer_phone && (
                <p class="text-sm text-charcoal-600">{order.customer_phone}</p>
              )}
            </div>
            <div>
              <p class="text-sm text-charcoal-500">Pago</p>
              <p class="font-medium text-navy-900">{order.payment_status || '-'}</p>
              {order.payment_intent_id && (
                <p class="text-xs text-charcoal-500 font-mono break-all mt-1">{order.payment_intent_id}</p>
              )}
            </div>
          </div>

          {/* Shipping Address */}
          {shippingAddress && (
            <div class="mt-6 pt-6 border-t border-charcoal-100">
              <p class="text-sm text-charcoal-500 mb-2">Dirección de envío</p>
              <div class="bg-gray-50 rounded-lg p-4 text-sm text-charcoal-700">
                <p>{shippingAddress.line1 || shippingAddress.address || ''}</p>
                {shippingAddress.line2 && <p>{shippingAddress.line2}</p>}
                <p>{shippingAddress.postal_code || shippingAddress.zip || ''} {shippingAddress.city || ''}</p>
                <p>{shippingAddress.state || ''} {shippingAddress.country || ''}</p>
              </div>
            </div>
          )}
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-charcoal-100 overflow-hidden">
          <div class="px-6 py-4 border-b border-charcoal-100">
            <h3 class="font-semibold text-navy-900">Artículos</h3>
          </div>
          <div class="divide-y divide-charcoal-100">
            {(items || []).length > 0 ? (
              (items || []).map((item: any) => (
                <div class="p-6 flex items-center gap-4">
                  <div class="w-14 h-14 bg-cream-100 rounded-lg overflow-hidden flex-shrink-0">
                    {item.product_image ? (
                      <img src={item.product_image} alt={item.product_name} class="w-full h-full object-cover" />
                    ) : (
                      <div class="w-full h-full flex items-center justify-center text-charcoal-300">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                      </div>
                    )}
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="font-medium text-navy-900 truncate">{item.product_name}</p>
                    <p class="text-sm text-charcoal-500">
                      {item.size ? `Talla: ${item.size}` : ''}
                      {item.color ? ` · Color: ${item.color}` : ''}
                    </p>
                    <p class="text-sm text-charcoal-600 mt-1">
                      {item.quantity} × {formatPrice(item.unit_price)}
                    </p>
                  </div>
                  <div class="text-right">
                    <p class="font-semibold text-navy-900">{formatPrice(item.total_price)}</p>
                  </div>
                </div>
              ))
            ) : (
              <div class="p-6 text-center text-charcoal-500">
                No hay artículos para este pedido.
              </div>
            )}
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-charcoal-100 p-6">
          <h3 class="font-semibold text-navy-900 mb-4">Resumen</h3>
          <div class="space-y-2 text-sm">
            <div class="flex items-center justify-between">
              <span class="text-charcoal-600">Subtotal</span>
              <span class="font-medium text-navy-900">{formatPrice(order.subtotal)}</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-charcoal-600">Envío</span>
              <span class="font-medium text-navy-900">
                {order.shipping_cost === 0 ? 'Gratis' : formatPrice(order.shipping_cost)}
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-charcoal-600">Impuestos</span>
              <span class="font-medium text-navy-900">{formatPrice(order.tax)}</span>
            </div>
            {order.discount_amount > 0 && (
              <div class="flex items-center justify-between text-green-600">
                <span>Descuento {order.discount_code ? `(${order.discount_code})` : ''}</span>
                <span class="font-medium">-{formatPrice(order.discount_amount)}</span>
              </div>
            )}
            <div class="pt-3 mt-3 border-t border-charcoal-100 flex items-center justify-between">
              <span class="text-charcoal-700 font-semibold">Total</span>
              <span class="text-navy-900 font-bold">{formatPrice(order.total)}</span>
            </div>
          </div>
        </div>
      </div>

      <div class="space-y-6">
        <div class="bg-white rounded-xl shadow-sm border border-charcoal-100 p-6">
          <h3 class="font-semibold text-navy-900 mb-4">Gestión</h3>

          <form method="POST" class="space-y-4">
            <div>
              <label for="status" class="block text-sm font-medium text-charcoal-700 mb-2">
                Estado
              </label>
              <select
                id="status"
                name="status"
                class="w-full px-4 py-3 rounded-lg border border-charcoal-200 bg-white focus:border-navy-500 focus:ring-2 focus:ring-navy-500/20 outline-none"
              >
                <option value="pending" selected={order.status === 'pending'}>Pendiente</option>
                <option value="paid" selected={order.status === 'paid'}>Pagado</option>
                <option value="processing" selected={order.status === 'processing'}>Procesando</option>
                <option value="shipped" selected={order.status === 'shipped'}>Enviado</option>
                <option value="delivered" selected={order.status === 'delivered'}>Entregado</option>
                <option value="cancelled" selected={order.status === 'cancelled'}>Cancelado</option>
                <option value="refunded" selected={order.status === 'refunded'}>Reembolsado</option>
              </select>
              <p class="text-xs text-charcoal-500 mt-1">Actual: {statusLabel(order.status)}</p>
            </div>

            <div>
              <label for="notes" class="block text-sm font-medium text-charcoal-700 mb-2">
                Notas internas
              </label>
              <textarea
                id="notes"
                name="notes"
                rows="5"
                class="w-full px-4 py-3 rounded-lg border border-charcoal-200 focus:border-navy-500 focus:ring-2 focus:ring-navy-500/20 outline-none resize-none"
              >{order.notes || ''}</textarea>
            </div>

            <Button type="submit" variant="primary" fullWidth>
              Guardar cambios
            </Button>
          </form>
        </div>

        {/* Cancel / Refund Actions */}
        {!['cancelled', 'refunded'].includes(order.status) && (
          <div class="bg-white rounded-xl shadow-sm border border-charcoal-100 p-6">
            <h3 class="font-semibold text-navy-900 mb-4">Acciones</h3>
            <div class="space-y-3">
              {['pending', 'paid', 'processing'].includes(order.status) && (
                <button
                  id="cancel-order-btn"
                  data-order-id={order.id}
                  class="w-full px-4 py-3 bg-red-50 text-red-700 border border-red-200 rounded-lg text-sm font-medium hover:bg-red-100 transition-colors"
                  type="button"
                >
                  Cancelar pedido
                </button>
              )}
              {order.payment_status === 'paid' && !['cancelled', 'refunded'].includes(order.status) && (
                <button
                  id="refund-order-btn"
                  data-order-id={order.id}
                  class="w-full px-4 py-3 bg-purple-50 text-purple-700 border border-purple-200 rounded-lg text-sm font-medium hover:bg-purple-100 transition-colors"
                  type="button"
                >
                  Procesar reembolso
                </button>
              )}
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  // Cancel Order
  const cancelBtn = document.getElementById('cancel-order-btn');
  cancelBtn?.addEventListener('click', async () => {
    const orderId = cancelBtn.getAttribute('data-order-id');
    if (!confirm('¿Estás seguro de que quieres cancelar este pedido? El stock será restaurado.')) return;

    cancelBtn.textContent = 'Cancelando...';
    (cancelBtn as HTMLButtonElement).disabled = true;

    try {
      const res = await fetch('/api/orders/cancel', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ orderId })
      });

      const data = await res.json();
      if (data.success) {
        document.getElementById('cancel-success')?.classList.remove('hidden');
        setTimeout(() => window.location.reload(), 1500);
      } else {
        alert(data.error || 'Error al cancelar el pedido');
        cancelBtn.textContent = 'Cancelar pedido';
        (cancelBtn as HTMLButtonElement).disabled = false;
      }
    } catch (err) {
      alert('Error de red al cancelar el pedido');
      cancelBtn.textContent = 'Cancelar pedido';
      (cancelBtn as HTMLButtonElement).disabled = false;
    }
  });

  // Refund Order
  const refundBtn = document.getElementById('refund-order-btn');
  refundBtn?.addEventListener('click', async () => {
    const orderId = refundBtn.getAttribute('data-order-id');
    if (!confirm('¿Procesar reembolso? Se restaurará el stock y se generará una factura de abono.')) return;

    refundBtn.textContent = 'Procesando...';
    (refundBtn as HTMLButtonElement).disabled = true;

    try {
      const res = await fetch('/api/orders/process-refund', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ orderId })
      });

      const data = await res.json();
      if (data.success) {
        alert(`Reembolso procesado: ${data.refundNumber || ''}`);
        window.location.reload();
      } else {
        alert(data.error || 'Error al procesar el reembolso');
        refundBtn.textContent = 'Procesar reembolso';
        (refundBtn as HTMLButtonElement).disabled = false;
      }
    } catch (err) {
      alert('Error de red al procesar el reembolso');
      refundBtn.textContent = 'Procesar reembolso';
      (refundBtn as HTMLButtonElement).disabled = false;
    }
  });
</script>
