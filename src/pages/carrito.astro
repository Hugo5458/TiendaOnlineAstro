---
import PublicLayout from '../layouts/PublicLayout.astro';
import Button from '../components/ui/Button.astro';

export const prerender = false; // SSR for cart

// This page shows cart contents from client-side state
// The actual cart data comes from Nano Stores on the client
---

<PublicLayout title="Tu Carrito | FashionStore">
  <div class="min-h-screen bg-gradient-to-b from-primary-50 via-white to-primary-50/50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-12">
      <!-- Breadcrumb -->
      <nav class="text-sm text-primary-600 mb-8 flex items-center gap-2">
        <a href="/" class="hover:text-primary-900 transition-colors">Inicio</a>
        <span class="text-primary-300">/</span>
        <span class="text-primary-900 font-semibold">Carrito</span>
      </nav>

      <!-- Header -->
      <div class="mb-12 animate-slide-down">
        <h1 class="text-4xl lg:text-5xl font-serif font-bold text-primary-950 mb-2">
          Tu Carrito
        </h1>
        <p class="text-primary-700 text-lg">Revisa tus prendas favoritas antes de finalizar</p>
      </div>
      
      <!-- Cart Content (populated by JS) -->
      <div id="cart-page-content" class="space-y-6">
        <!-- Loading state -->
        <div class="animate-pulse space-y-4">
          <div class="h-32 bg-primary-200/40 rounded-2xl"></div>
          <div class="h-32 bg-primary-200/40 rounded-2xl"></div>
        </div>
      </div>
      
      <!-- Empty Cart (hidden by default) -->
      <div id="cart-empty" class="hidden">
        <div class="max-w-md mx-auto text-center py-20 animate-slide-up">
          <div class="w-32 h-32 rounded-full bg-gradient-to-br from-primary-100 to-primary-50 flex items-center justify-center mx-auto mb-8">
            <svg class="w-16 h-16 text-primary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
            </svg>
          </div>
          <h2 class="text-3xl font-serif font-bold text-primary-950 mb-3">
            Tu carrito est√° vac√≠o
          </h2>
          <p class="text-primary-700 mb-10 text-lg leading-relaxed">
            A√∫n no tienes nada en el carrito. ¬°Explora nuestra colecci√≥n y encuentra prendas exclusivas para ti!
          </p>
          <Button href="/productos" variant="secondary" size="lg">
            Descubrir colecci√≥n
          </Button>
        </div>
      </div>
      
      <!-- Cart with items (hidden by default) -->
      <div id="cart-with-items" class="hidden">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Cart Items -->
          <div class="lg:col-span-2">
            <div id="cart-items-list" class="space-y-4">
              <!-- Items rendered by JS -->
            </div>
          </div>
          
          <!-- Order Summary -->
          <div class="lg:col-span-1">
            <div class="bg-gradient-to-br from-primary-50 to-primary-100/50 rounded-2xl p-8 sticky top-24 shadow-elegant border border-primary-200/50 backdrop-blur-sm">
              <h2 class="text-2xl font-serif font-bold text-primary-950 mb-8">
                Resumen del pedido
              </h2>
              
              <div class="space-y-4 mb-8 pb-8 border-b border-primary-200/50">
                <div class="flex justify-between items-center">
                  <span class="text-primary-700">Subtotal</span>
                  <span id="summary-subtotal" class="font-semibold text-primary-900">0,00 ‚Ç¨</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-primary-700">Env√≠o</span>
                  <span id="summary-shipping" class="font-semibold text-success-600 flex items-center gap-1">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    Gratis
                  </span>
                </div>
                
                <!-- Discount Code Section -->
                <div class="pt-4 border-t border-primary-100">
                  <label class="text-sm font-medium text-primary-700 mb-2 block">C√≥digo de descuento</label>
                  <div class="flex gap-2">
                    <input 
                      type="text" 
                      id="discount-code-input" 
                      placeholder="Introduce tu c√≥digo"
                      class="flex-1 px-3 py-2 border border-primary-200 rounded-lg text-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all uppercase"
                    />
                    <button 
                      id="apply-discount-btn"
                      class="px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white text-sm font-medium rounded-lg transition-all duration-200 hover:shadow-md disabled:opacity-50 disabled:cursor-not-allowed"
                    >
                      Aplicar
                    </button>
                  </div>
                  <div id="discount-message" class="mt-2 text-sm hidden"></div>
                  
                  <!-- Applied Discount Display -->
                  <div id="applied-discount" class="hidden mt-3 p-3 bg-success-50 border border-success-200 rounded-lg">
                    <div class="flex justify-between items-center">
                      <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A2 2 0 013 12V7a4 4 0 014-4z" />
                        </svg>
                        <span class="text-success-800 font-medium" id="discount-code-display"></span>
                      </div>
                      <button id="remove-discount-btn" class="text-success-700 hover:text-danger-600 transition-colors">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                      </button>
                    </div>
                    <p class="text-success-700 text-sm mt-1" id="discount-description"></p>
                    <p class="text-success-600 font-bold mt-1">-<span id="discount-amount-display"></span></p>
                  </div>
                </div>
              </div>
              
              <div class="mb-8">
                <div class="flex justify-between items-baseline">
                  <span class="text-primary-900 font-semibold">Total</span>
                  <span id="summary-total" class="text-4xl font-bold bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">0,00 ‚Ç¨</span>
                </div>
                <p class="text-xs text-primary-600 mt-2">
                  ‚úì Impuestos incluidos
                </p>
              </div>
              
              <Button href="/checkout" variant="secondary" size="lg" fullWidth class="mb-4 group shadow-lg hover:shadow-xl transition-all">
                <span class="flex items-center justify-center gap-2">
                  Finalizar compra
                  <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                </span>
              </Button>
              
              <div class="text-center mb-6">
                <a href="/productos" class="text-primary-600 hover:text-primary-900 font-medium transition-colors inline-flex items-center gap-1">
                  ‚Üê Continuar comprando
                </a>
              </div>
              
              <!-- Security Badges -->
              <div class="pt-6 border-t border-primary-200/50">
                <p class="text-xs text-primary-600 text-center mb-4 font-semibold">Pago 100% Seguro</p>
                <div class="flex justify-center gap-3">
                  <div class="h-8 w-12 bg-gradient-to-br from-blue-600 to-blue-700 rounded shadow-sm flex items-center justify-center">
                    <span class="text-white text-xs font-bold">VISA</span>
                  </div>
                  <div class="h-8 w-12 bg-gradient-to-br from-red-600 to-red-700 rounded shadow-sm flex items-center justify-center">
                    <span class="text-white text-xs font-bold">MC</span>
                  </div>
                  <div class="h-8 w-12 bg-black rounded shadow-sm flex items-center justify-center">
                    <span class="text-white text-xs font-bold">PAYPAL</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</PublicLayout>

<script>
  import { cartItems, cartSubtotal, removeFromCart, updateCartItemQuantity } from '../stores/cart';
  
  function formatPrice(cents: number): string {
    return new Intl.NumberFormat('es-ES', {
      style: 'currency',
      currency: 'EUR',
    }).format(cents / 100);
  }
  
  const pageContent = document.getElementById('cart-page-content');
  const emptyCart = document.getElementById('cart-empty');
  const cartWithItems = document.getElementById('cart-with-items');
  const itemsList = document.getElementById('cart-items-list');
  const subtotalEl = document.getElementById('summary-subtotal');
  const totalEl = document.getElementById('summary-total');
  
  function renderCartPage() {
    const items = cartItems.get();
    const subtotal = cartSubtotal.get();
    
    if (items.length === 0) {
      pageContent?.classList.add('hidden');
      emptyCart?.classList.remove('hidden');
      cartWithItems?.classList.add('hidden');
      return;
    }
    
    pageContent?.classList.add('hidden');
    emptyCart?.classList.add('hidden');
    cartWithItems?.classList.remove('hidden');
    
    if (itemsList) {
      itemsList.innerHTML = items.map((item, idx) => `
        <div class="flex gap-6 p-6 bg-white rounded-2xl shadow-md border border-primary-100/50 hover:shadow-elegant transition-all duration-300 animate-slide-up group" style="animation-delay: ${idx * 50}ms">
          <!-- Product Image -->
          <div class="w-28 h-36 bg-gradient-to-br from-primary-100 to-primary-50 rounded-xl overflow-hidden flex-shrink-0 shadow-sm border border-primary-200/50 group-hover:scale-105 transition-transform duration-300">
            <img src="${item.image}" alt="${item.name}" class="w-full h-full object-cover" loading="lazy" />
          </div>
          
          <!-- Product Info -->
          <div class="flex-1 min-w-0 flex flex-col justify-between">
            <div>
              <h3 class="font-semibold text-primary-950 text-lg group-hover:text-primary-700 transition-colors">${item.name}</h3>
              <div class="mt-2 space-y-1">
                <p class="text-sm text-primary-600">üìè Talla: <span class="font-medium">${item.size}</span></p>
                ${item.color ? `<p class="text-sm text-primary-600">üé® Color: <span class="font-medium">${item.color}</span></p>` : ''}
              </div>
            </div>
            
            <!-- Price -->
            <div class="flex items-baseline gap-2 mt-3">
              <span class="text-2xl font-bold bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">${formatPrice(item.price * item.quantity)}</span>
              <span class="text-sm text-primary-500 font-medium">${formatPrice(item.price)} c/u</span>
            </div>
          </div>
          
          <!-- Quantity Controls & Actions -->
          <div class="flex flex-col items-end justify-between">
            <!-- Quantity -->
            <div class="flex items-center gap-2 bg-primary-50 rounded-xl p-1.5 border border-primary-200">
              <button class="qty-decrease w-8 h-8 rounded-lg bg-white text-primary-600 hover:text-primary-900 hover:bg-primary-100 transition-all flex items-center justify-center font-semibold" data-id="${item.id}">
                ‚àí
              </button>
              <span class="w-8 text-center font-bold text-primary-900">${item.quantity}</span>
              <button class="qty-increase w-8 h-8 rounded-lg bg-white text-primary-600 hover:text-primary-900 hover:bg-primary-100 transition-all flex items-center justify-center font-semibold ${item.quantity >= item.maxStock ? 'opacity-50 cursor-not-allowed' : ''}" data-id="${item.id}" ${item.quantity >= item.maxStock ? 'disabled' : ''}>
                +
              </button>
            </div>
            
            <!-- Remove Button -->
            <button class="remove-item p-2 text-primary-400 hover:text-danger-600 transition-all duration-300 hover:scale-110 group/delete" data-id="${item.id}" title="Eliminar del carrito">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            </button>
          </div>
        </div>
      `).join('');
      
      // Add event listeners
      document.querySelectorAll('.qty-decrease').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const id = e.currentTarget.dataset.id;
          const item = items.find(i => i.id === id);
          if (item && item.quantity > 1) {
            updateCartItemQuantity(id, item.quantity - 1);
          } else if (item) {
            removeFromCart(id);
          }
        });
      });
      
      document.querySelectorAll('.qty-increase').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const id = e.currentTarget.dataset.id;
          const item = items.find(i => i.id === id);
          if (item && item.quantity < item.maxStock) updateCartItemQuantity(id, item.quantity + 1);
        });
      });
      
      document.querySelectorAll('.remove-item').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const id = e.currentTarget.dataset.id;
          removeFromCart(id);
        });
      });
    }
    
    if (subtotalEl) subtotalEl.textContent = formatPrice(subtotal);
    
    // Update total with discount
    const currentDiscount = appliedDiscount;
    const finalTotal = currentDiscount ? Math.max(0, subtotal - currentDiscount.discount_amount) : subtotal;
    if (totalEl) totalEl.textContent = formatPrice(finalTotal);
  }
  
  // ============= Discount Code Logic =============
  let appliedDiscount: {
    code: string;
    discount_type: string;
    discount_value: number;
    discount_amount: number;
    description: string;
  } | null = null;
  
  const discountInput = document.getElementById('discount-code-input') as HTMLInputElement;
  const applyDiscountBtn = document.getElementById('apply-discount-btn');
  const discountMessage = document.getElementById('discount-message');
  const appliedDiscountEl = document.getElementById('applied-discount');
  const discountCodeDisplay = document.getElementById('discount-code-display');
  const discountDescription = document.getElementById('discount-description');
  const discountAmountDisplay = document.getElementById('discount-amount-display');
  const removeDiscountBtn = document.getElementById('remove-discount-btn');
  
  async function validateAndApplyDiscount() {
    const code = discountInput?.value.trim().toUpperCase();
    if (!code) {
      showDiscountMessage('Por favor, introduce un c√≥digo', 'error');
      return;
    }
    
    const subtotal = cartSubtotal.get();
    
    // Disable button while processing
    if (applyDiscountBtn) {
      applyDiscountBtn.textContent = 'Validando...';
      (applyDiscountBtn as HTMLButtonElement).disabled = true;
    }
    
    try {
      const response = await fetch('/api/discount/validate', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ code, subtotal })
      });
      
      const data = await response.json();
      
      if (data.valid) {
        appliedDiscount = {
          code: data.code,
          discount_type: data.discount_type,
          discount_value: data.discount_value,
          discount_amount: data.discount_amount,
          description: data.description
        };
        
        // Show applied discount
        showAppliedDiscount();
        hideDiscountMessage();
        
        // Update totals
        renderCartPage();
        
        // Save to localStorage
        localStorage.setItem('fashionstore-discount', JSON.stringify(appliedDiscount));
      } else {
        showDiscountMessage(data.error || 'C√≥digo no v√°lido', 'error');
      }
    } catch (error) {
      console.error('Error validating discount:', error);
      showDiscountMessage('Error al validar el c√≥digo', 'error');
    } finally {
      if (applyDiscountBtn) {
        applyDiscountBtn.textContent = 'Aplicar';
        (applyDiscountBtn as HTMLButtonElement).disabled = false;
      }
    }
  }
  
  function showDiscountMessage(message: string, type: 'success' | 'error') {
    if (discountMessage) {
      discountMessage.textContent = message;
      discountMessage.className = `mt-2 text-sm ${type === 'error' ? 'text-danger-600' : 'text-success-600'}`;
      discountMessage.classList.remove('hidden');
    }
  }
  
  function hideDiscountMessage() {
    discountMessage?.classList.add('hidden');
  }
  
  function showAppliedDiscount() {
    if (!appliedDiscount) return;
    
    if (discountCodeDisplay) discountCodeDisplay.textContent = appliedDiscount.code;
    if (discountDescription) discountDescription.textContent = appliedDiscount.description;
    if (discountAmountDisplay) discountAmountDisplay.textContent = formatPrice(appliedDiscount.discount_amount);
    
    appliedDiscountEl?.classList.remove('hidden');
    
    // Hide input section
    if (discountInput) discountInput.disabled = true;
    if (applyDiscountBtn) (applyDiscountBtn as HTMLButtonElement).disabled = true;
  }
  
  function removeDiscount() {
    appliedDiscount = null;
    
    // Hide applied discount
    appliedDiscountEl?.classList.add('hidden');
    
    // Re-enable input
    if (discountInput) {
      discountInput.disabled = false;
      discountInput.value = '';
    }
    if (applyDiscountBtn) (applyDiscountBtn as HTMLButtonElement).disabled = false;
    
    // Update totals
    renderCartPage();
    
    // Remove from localStorage
    localStorage.removeItem('fashionstore-discount');
  }
  
  // Load saved discount on page load
  function loadSavedDiscount() {
    try {
      const saved = localStorage.getItem('fashionstore-discount');
      if (saved) {
        const discount = JSON.parse(saved);
        // Re-validate the discount with current subtotal
        const subtotal = cartSubtotal.get();
        
        fetch('/api/discount/validate', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ code: discount.code, subtotal })
        })
        .then(res => res.json())
        .then(data => {
          if (data.valid) {
            appliedDiscount = {
              code: data.code,
              discount_type: data.discount_type,
              discount_value: data.discount_value,
              discount_amount: data.discount_amount,
              description: data.description
            };
            showAppliedDiscount();
            renderCartPage();
          } else {
            localStorage.removeItem('fashionstore-discount');
          }
        })
        .catch(() => {
          localStorage.removeItem('fashionstore-discount');
        });
      }
    } catch {
      localStorage.removeItem('fashionstore-discount');
    }
  }
  
  // Event listeners for discount
  applyDiscountBtn?.addEventListener('click', validateAndApplyDiscount);
  discountInput?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      e.preventDefault();
      validateAndApplyDiscount();
    }
  });
  removeDiscountBtn?.addEventListener('click', removeDiscount);
  
  // Recalculate discount when cart changes
  cartSubtotal.subscribe((newSubtotal) => {
    if (appliedDiscount) {
      // Recalculate discount amount based on new subtotal
      if (appliedDiscount.discount_type === 'percentage') {
        appliedDiscount.discount_amount = Math.floor((newSubtotal * appliedDiscount.discount_value) / 100);
      }
      // For fixed, amount stays the same but cap at subtotal
      appliedDiscount.discount_amount = Math.min(appliedDiscount.discount_amount, newSubtotal);
      
      if (discountAmountDisplay) {
        discountAmountDisplay.textContent = formatPrice(appliedDiscount.discount_amount);
      }
    }
  });
  
  // ============= Checkout handler =============
  const checkoutBtn = document.querySelector('a[href="/checkout"]') as HTMLButtonElement | null;
  if (checkoutBtn) {
    // Change to button behavior
    checkoutBtn.addEventListener('click', async (e) => {
      e.preventDefault();
      console.log('Iniciando checkout...');
      
      const items = cartItems.get();
      if (items.length === 0) return;
      
      const originalContent = checkoutBtn.innerHTML;
      checkoutBtn.disabled = true;
      checkoutBtn.innerHTML = '<span class="flex items-center justify-center gap-2"><svg class="animate-spin h-5 w-5" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Procesando...</span>';
      
      try {
        // Get user info from localStorage if available
        const userStr = localStorage.getItem('fashionstore-user');
        const user = userStr ? JSON.parse(userStr) : null;
        
        console.log('Enviando petici√≥n a /api/checkout');
        const response = await fetch('/api/checkout', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            items,
            customerEmail: user?.email || '', // Stripe will ask if empty
            customerName: user?.username || 'Invitado',
            discountCode: appliedDiscount?.code || null
          })
        });
        
        const data = await response.json();
        console.log('Respuesta checkout:', data);
        
        if (response.ok && data.url) {
          // Clear discount from localStorage on successful checkout start
          localStorage.removeItem('fashionstore-discount');
          window.location.href = data.url;
        } else {
          console.error('Error checkout:', data);
          alert('Error: ' + (data.error || 'No se pudo iniciar el pago. Revisa la consola.'));
          checkoutBtn.disabled = false;
          checkoutBtn.innerHTML = originalContent;
        }
      } catch (error) {
        console.error('Checkout exception:', error);
        alert('Error conectando con el servidor de pagos. Revisa tu conexi√≥n.');
        checkoutBtn.disabled = false;
        checkoutBtn.innerHTML = originalContent;
      }
    });
  }
  
  // Subscribe to cart changes
  cartItems.subscribe(renderCartPage);
  
  // Initial render
  renderCartPage();
  
  // Load any saved discount
  loadSavedDiscount();
</script>
