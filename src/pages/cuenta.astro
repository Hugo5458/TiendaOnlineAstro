<script is:inline define:vars={{ profile }}>
  if (profile) {
    const userData = {
      username: profile.username || profile.email?.split('@')[0] || 'Usuario',
      email: profile.email,
      loggedInAt: new Date().toISOString()
    };
    localStorage.setItem('fashionstore-user', JSON.stringify(userData));
    
    // Update Header UI immediately
    const userMenuText = document.getElementById('user-menu-text');
    const guestMenu = document.getElementById('guest-menu');
    const loggedInMenu = document.getElementById('logged-in-menu');
    const adminLink = document.getElementById('admin-link');
    const ADMIN_EMAILS = ['hugodelmoral77@gmail.com', 'admin@fashionstore.com'];

    if (userMenuText) {
      userMenuText.textContent = userData.username;
      userMenuText.classList.remove('invisible');
    }
    if (guestMenu) guestMenu.classList.add('hidden');
    if (loggedInMenu) loggedInMenu.classList.remove('hidden');
    
    if (adminLink && userData.email && ADMIN_EMAILS.includes(userData.email)) {
       adminLink.classList.remove('hidden');
    }
  }
</script>

<script>
  // Handle logout from cuenta page sidebar
  document.getElementById('cuenta-logout-btn')?.addEventListener('click', async () => {
    try {
      const response = await fetch('/api/auth/customer-logout', { method: 'POST' });
      await response.json();
    } catch (error) {
      console.error('Logout error:', error);
    } finally {
      localStorage.removeItem('fashionstore-user');
      for (const key of Object.keys(localStorage)) {
        if (key.startsWith('sb-') || key.includes('supabase')) {
          localStorage.removeItem(key);
        }
      }
      window.location.href = '/';
    }
  });
</script>
