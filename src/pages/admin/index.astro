---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { supabase, getProducts } from '../../lib/supabase';
import { formatPrice } from '../../lib/utils';

export const prerender = false; // SSR

// Check authentication
const accessToken = Astro.cookies.get('sb-access-token')?.value;
if (!accessToken) {
  return Astro.redirect('/login?redirect=/admin');
}

// Verify token and check if user is admin
const { data: { user } } = await supabase.auth.getUser(accessToken);
const ADMIN_EMAILS = ['hugodelmoral77@gmail.com', 'admin@fashionstore.com'];
const isAdmin = !!user?.email && ADMIN_EMAILS.includes(user.email);

if (!isAdmin) {
  return Astro.redirect('/cuenta');
}

// Get dashboard stats
const products = await getProducts();
const { data: orders } = await supabase.from('orders').select('*').order('created_at', { ascending: true });
const { data: settings } = await supabase.from('site_settings').select('*');

// Get best selling product from order_items
const { data: orderItems } = await supabase
  .from('order_items')
  .select('product_name, product_image, quantity, unit_price');

let bestSeller = { name: 'Sin datos', image: '', totalSold: 0, revenue: 0 };
if (orderItems && orderItems.length > 0) {
  const salesMap = new Map<string, { name: string; image: string; totalSold: number; revenue: number }>();
  for (const item of orderItems) {
    const existing = salesMap.get(item.product_name) || { name: item.product_name, image: item.product_image || '', totalSold: 0, revenue: 0 };
    existing.totalSold += item.quantity;
    existing.revenue += item.unit_price * item.quantity;
    salesMap.set(item.product_name, existing);
  }
  // Find the product with the most units sold
  let maxSold = 0;
  for (const [, data] of salesMap) {
    if (data.totalSold > maxSold) {
      maxSold = data.totalSold;
      bestSeller = data;
    }
  }
}

const stats = {
  totalProducts: products.length,
  activeProducts: products.filter(p => p.is_active).length,
  lowStock: products.filter(p => p.stock <= 5 && p.stock > 0).length,
  outOfStock: products.filter(p => p.stock === 0).length,
  totalOrders: orders?.length || 0,
  pendingOrders: orders?.filter(o => o.status === 'pending' || o.status === 'processing').length || 0,
  paidOrders: orders?.filter(o => o.payment_status === 'paid').length || 0,
  shippedOrders: orders?.filter(o => o.status === 'shipped').length || 0,
  deliveredOrders: orders?.filter(o => o.status === 'delivered').length || 0,
  cancelledOrders: orders?.filter(o => o.status === 'cancelled').length || 0,
};

const showFlashOffers = settings?.find(s => s.key === 'show_flash_offers')?.value === true;

// Calculate total revenue (only paid orders)
const totalRevenue = orders?.filter(o => o.payment_status === 'paid').reduce((sum, order) => sum + (order.total || 0), 0) || 0;

// Calculate monthly revenue for chart (last 6 months)
const now = new Date();
const monthlyRevenue: { month: string; revenue: number; count: number }[] = [];
for (let i = 5; i >= 0; i--) {
  const d = new Date(now.getFullYear(), now.getMonth() - i, 1);
  const monthStr = d.toLocaleDateString('es-ES', { month: 'short' });
  const yearMonth = `${d.getFullYear()}-${String(d.getMonth() + 1).padStart(2, '0')}`;
  const monthOrders = orders?.filter(o => {
    const oDate = new Date(o.created_at);
    return `${oDate.getFullYear()}-${String(oDate.getMonth() + 1).padStart(2, '0')}` === yearMonth
      && o.payment_status === 'paid';
  }) || [];
  monthlyRevenue.push({
    month: monthStr.charAt(0).toUpperCase() + monthStr.slice(1),
    revenue: monthOrders.reduce((s, o) => s + (o.total || 0), 0),
    count: monthOrders.length,
  });
}

// Order status distribution for doughnut chart
const statusDistribution = {
  pendientes: stats.pendingOrders,
  enviados: stats.shippedOrders,
  entregados: stats.deliveredOrders,
  cancelados: stats.cancelledOrders,
};
