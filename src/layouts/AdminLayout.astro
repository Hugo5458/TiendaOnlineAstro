import BaseLayout from './BaseLayout.astro';


interface Props {
  title: string;
}

const { title } = Astro.props;

// Authorization check
const accessToken = Astro.cookies.get('sb-access-token')?.value;

Astro.response.headers.set('Cache-Control', 'no-store');
Astro.response.headers.set('Pragma', 'no-cache');
Astro.response.headers.set('Expires', '0');

if (!accessToken) {
  return Astro.redirect('/login');
}

import { supabase } from '../lib/supabase';
const { data: { user }, error } = await supabase.auth.getUser(accessToken);

if (error || !user) {
  return Astro.redirect('/login');
}

// Allowed admin emails
const ADMIN_EMAILS = ['hugodelmoral77@gmail.com', 'admin@fashionstore.com'];
const userEmail = user.email || '';

if (!ADMIN_EMAILS.includes(userEmail)) {
  console.warn(`Unauthorized access attempt by ${userEmail}`);
  return Astro.redirect('/');
}

// Get current path for active state
const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/admin', label: 'Dashboard', icon: 'home', description: 'Vista general' },
  { href: '/admin/productos', label: 'Productos', icon: 'box', description: 'Gestionar catálogo' },
  { href: '/admin/categorias', label: 'Categorías', icon: 'folder', description: 'Organizar productos' },
  { href: '/admin/pedidos', label: 'Pedidos', icon: 'shopping-bag', description: 'Ver ventas' },
  { href: '/admin/facturas', label: 'Facturas', icon: 'receipt', description: 'Facturas y abonos' },
  { href: '/admin/descuentos', label: 'Descuentos', icon: 'tag', description: 'Códigos promocionales' },
  { href: '/admin/configuracion', label: 'Configuración', icon: 'settings', description: 'Ajustes' },
];

const isActive = (href: string) => {
  if (href === '/admin') {
    return currentPath === '/admin' || currentPath === '/admin/';
  }
  return currentPath.startsWith(href);
};
