---
import type { Product } from '../../lib/supabase';
import { formatPrice, calculateDiscount, getStockStatus } from '../../lib/utils';

interface Props {
  product: Product;
  showAddToCart?: boolean;
}

const { product, showAddToCart = true } = Astro.props;

const discount = calculateDiscount(product.price, product.compare_at_price);
const stockStatus = getStockStatus(product.stock);
---

<article class="group relative flex flex-col">
  <!-- Image Container - P&B Style -->
  <a href={`/productos/${product.slug}`} class="block aspect-[3/4] overflow-hidden bg-gray-100 relative">
    {product.images[0] ? (
      <img 
        src={product.images[0]}
        alt={product.name}
        class="w-full h-full object-cover transition-opacity duration-300 group-hover:opacity-90"
        loading="lazy"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center text-gray-300">
        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    )}
    
    <!-- Badges - Minimal P&B Style -->
    <div class="absolute top-3 left-3 flex flex-col gap-2">
      {discount > 0 && (
        <span class="text-accent-500 text-xs font-medium uppercase tracking-wider">
          -{discount}%
        </span>
      )}
      {product.is_flash_offer && (
        <span class="text-accent-500 text-xs font-medium uppercase tracking-wider">
          Oferta
        </span>
      )}
    </div>
    
    <!-- Wishlist Button - P&B Style -->
    <button 
      class="absolute top-3 right-3 w-8 h-8 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 hover:scale-110"
      aria-label="Añadir a favoritos"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
      </svg>
    </button>
    
    <!-- Quick Add Button - P&B Style (appears on hover) -->
    {showAddToCart && stockStatus.available && (
      <div class="absolute bottom-0 left-0 right-0 p-3 opacity-0 group-hover:opacity-100 transition-all duration-300 translate-y-2 group-hover:translate-y-0">
        <button 
          class="product-quick-add w-full py-3 bg-white text-black text-xs uppercase tracking-widest font-medium hover:bg-black hover:text-white transition-colors"
          data-product-id={product.id}
          data-product-json={JSON.stringify(product)}
        >
          Añadir rápido
        </button>
      </div>
    )}
    
    <!-- Out of Stock Overlay -->
    {!stockStatus.available && (
      <div class="absolute inset-0 bg-white/80 flex items-center justify-center">
        <span class="text-xs uppercase tracking-widest text-gray-500">
          Agotado
        </span>
      </div>
    )}
  </a>
  
  <!-- Product Info - P&B Minimal Style -->
  <div class="pt-3 pb-1">
    <!-- Product Name -->
    <h3>
      <a 
        href={`/productos/${product.slug}`}
        class="text-sm text-gray-900 hover:underline line-clamp-1"
      >
        {product.name}
      </a>
    </h3>
    
    <!-- Price -->
    <div class="mt-1 flex items-center gap-2">
      <span class={`text-sm ${discount > 0 ? 'text-accent-500' : 'text-gray-900'}`}>
        {formatPrice(product.price)}
      </span>
      {product.compare_at_price && product.compare_at_price > product.price && (
        <span class="text-sm text-gray-400 line-through">
          {formatPrice(product.compare_at_price)}
        </span>
      )}
    </div>
    
    <!-- Color Swatches Placeholder (if has variants) -->
    <div class="mt-2 flex items-center gap-1">
      <!-- These would be real color options in production -->
      <span class="w-3 h-3 rounded-full bg-black border border-gray-200" title="Negro"></span>
      <span class="w-3 h-3 rounded-full bg-white border border-gray-200" title="Blanco"></span>
      <span class="w-3 h-3 rounded-full bg-blue-900 border border-gray-200" title="Azul"></span>
    </div>
  </div>
</article>

<script>
  // Quick add button - opens product page
  document.querySelectorAll('.product-quick-add').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      const productJson = (e.currentTarget as HTMLButtonElement).dataset.productJson;
      if (productJson) {
        const product = JSON.parse(productJson);
        window.location.href = `/productos/${product.slug}`;
      }
    });
  });
</script>
